{
  "name": "Nebula",
  "version": "1.0.0",
  "description": "",
  "main": "./app/src/main-electron.js",
  "scripts": {
    "start": "electron app/src/main-electron.js",
    "dev": "npm run watch-js &&  npm run watch-css",
    "watch-electron-js": "watchify --insert-globals true ./app/src/main-electron.js --debug -o ./app/src/main-electron-build.js",
    "watch-js": "watchify --insert-globals true ./app/src/main-web.js --debug -o ./app/src/main-web-build.js",
    "watch-css": "sass --watch ./app/src/styles",
    "build": "node tasks/release.js",
    "build:clean": "cross-env PLATFORM_TARGET=clean node tasks/release.js",
    "build:darwin": "cross-env PLATFORM_TARGET=darwin node tasks/release.js",
    "build:linux": "cross-env PLATFORM_TARGET=linux node tasks/release.js",
    "build:mas": "cross-env PLATFORM_TARGET=mas node tasks/release.js",
    "build:win32": "cross-env PLATFORM_TARGET=win32 node tasks/release.js",
    "postinstall": "cd app && npm install"
  },
  "keywords": [],
  "author": "Deep Space Software",
  "license": "UNLICENCED",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babelify": "^7.3.0",
    "electron": "^1.6.2",
    "electron-packager": "^8.6.0",
    "electron-prebuilt-compile": "^1.4.15",
    "firebase": "^3.7.3",
    "firebaseui": "^1.0.0",
    "golden-layout": "^1.5.7",
    "jquery": "^3.2.1",
    "vue": "^2.2.4",
    "vue-form-generator": "^2.0.0-beta5",
    "watchify": "^3.9.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
