{
  "rules": {
    "configurations_default": {
      ".read": true
    },
    "configurations_private": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid"
      }
    },
    "configurations_public_read": {
      ".indexOn": ["title", "description", "author_display_name"],
      ".read": true,
      ".write": false
    },
    "configurations_public": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid"
      }
    },
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "$uid === auth.uid"
      }
    }
  }
}
